@using Marketplace.Dependencies;
@using NLog;

@{
    Logger logger = LogManager.GetCurrentClassLogger();

    try
    {
        DependencyResolver.Instance.BuyersProductsLogic.MakingAPurchase(HttpContext.Current.User.Identity.Name);

        Response.Redirect(Request.UrlReferrer.ToString(), false);
    }
    catch (Exception e)
    {

        logger.Error(e.Message);
    }
    finally
    {
        Response.Redirect(Request.UrlReferrer.ToString()); //TODO через страницу "покупка совершена" и кнопку "Продолжить покупки?"
    }

}