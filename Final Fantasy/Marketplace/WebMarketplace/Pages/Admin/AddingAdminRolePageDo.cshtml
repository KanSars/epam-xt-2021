@using Marketplace.Dependencies;
@using NLog;

@{
    Logger logger = LogManager.GetCurrentClassLogger();

    var addingAdminRoleLogin = Request["AddingAdminRoleLogin"];


    try
    {
        DependencyResolver.Instance.BuyersRolesLogic.AssignAdminRights(addingAdminRoleLogin);

        Response.Redirect(Request.UrlReferrer.ToString(), false);
    }
    catch (Exception e)
    {
        logger.Error(e.Message);
    }
    finally
    {
        Response.Redirect(Request.UrlReferrer.ToString());
    }

}