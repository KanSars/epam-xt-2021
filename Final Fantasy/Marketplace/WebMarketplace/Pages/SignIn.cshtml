@using WebMarketplace.Models;

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    if (IsPost)
    {
        var login = Request["login"];
        var pass = Request["pass"];

        if (Auth.CanLogin(login, pass))
        {
            FormsAuthentication.SetAuthCookie(login, createPersistentCookie: true);
            Response.Redirect("/");
        }
        else
        {
            //тут можно с переходом через страничку "Введённый Вами пара логин/пароль не верны вернитесь на страничку ввода данных или к регистрации"
            @*@:ошибочка при вводе
                Response.Redirect("/Pages/SignIn");*@
            <div class="alert alert-success" role="alert">
                Ошибочка при вводе!!!
            </div>
        }
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<form method="post" id="signInForm">
    <div class="form-group">
        <div class="col-sm-3 my-1">
            <label for="exampleInputEmail1">Login</label>
            <input name="login" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="login">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 my-1">
            <label for="exampleInputPassword1">Password</label>
            <input name="pass" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>

<button id="RegisterBtn" type="submit" class="btn btn-primary">Зарегистрироваться</button>

<script>
    $('#RegisterBtn').click(function () {
        location.href = '/Pages/RegistrationPage';
    })
</script>

<script>
    $("#signInForm").validate({
        onkeyup: true,
        rules: {
            login: {
                required: true,
                // email: true
            },
            pass: {
                required: true,
                minlength: 4
            }

        },
        messages: {
            login: {
                required: "Поле email обязательно для заполнения",
            },
            pass: {
                required: "Поле имя обязательно для заполнения",
                minlength: jQuery.validator.format("Длина имени должна быть больше 4-ти символов")
            }
        }
    });
</script>

